@model Personal.Models.BlogIndexModel
<div class="container my-2">
    <div class="row">
        <div class="col">
            <h1>Blog Personal de Julián</h1>
            <p>Importado desde <a href="https://shinjistudio.blogspot.com">shinjistudio.blogspot.com</a></p>
        </div>
    </div>
    <div class="row">
    <div class="col align-self-center">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Titulo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entrada in Model.Entradas)
                {
                    <tr>
                        <td>@entrada.Fecha.ToLongDateString()</td>
                        <td><a href="/Blog/Entrada/@entrada.Id">@entrada.Titulo</a></td>
                    </tr>
                }
            </tbody>
        </table>
        </>
    </div>
    </div>
</div>