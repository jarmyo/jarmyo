@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html lang="@Localizer["Lang"]">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="@ViewBag.Titulo" />
    <meta name="author" content="Julián Augusto Ruiz Martinez" />
    <meta name="robots" content="index, follow">
    @RenderSection("Metas", required: false)
    <title>Julián Augusto Ruíz Martinez - @ViewBag.Titulo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <link rel="stylesheet" href="styles/site.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-CDL9QS9GDS"></script>
    <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-CDL9QS9GDS');
    </script>
    @RenderSection("HeadScripts", required: false)
    @RenderSection("Styles", required: false)
</head>
<body id="page-top">
    @RenderSection("Head", required: false)
    <main id="main-section">
        @RenderBody()
    </main>
    <footer class="fixed-bottom footer d-flex flex-wrap justify-content-between align-items-center p-0 bg-dark">
        <a href="/" class="col-md-6 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto text-muted text-decoration-none">
            @Localizer["Copyright"] &copy @DateTime.Now.Year Julián Augusto Ruiz
        </a>        
        @await Html.PartialAsync("_SelectLanguagePartial")
    </footer>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>