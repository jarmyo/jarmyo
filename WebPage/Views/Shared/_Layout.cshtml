@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html lang="@Localizer["Lang"]">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="@ViewBag.Titulo" />
    <meta name="author" content="Julián Augusto Ruiz Martinez" />
    <meta name="robots" content="index, follow">
    @RenderSection("Metas", required: false)
    <title>Julián Augusto Ruíz Martinez - @ViewBag.Titulo</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.1.3/dist/@Personal.ThemeHelper.CurrentTheme(Context)/bootstrap.min.css" id="themeSheet">
    <link rel="stylesheet" href="styles/site.min.css">
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-CDL9QS9GDS"></script>
    <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-CDL9QS9GDS');
    </script>
    @RenderSection("HeadScripts", required: false)
    @RenderSection("Styles", required: false)
</head>
<body id="page-top">
    @RenderSection("Head", required: false)
    <main id="main-section">
        @RenderBody()
    </main>
    <footer class="fixed-bottom footer d-flex flex-wrap justify-content-between align-items-center p-0 bg-dark">
        @await Html.PartialAsync("_SelectThemePartial")
        <a href="/" class="col-md-6 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto text-muted text-decoration-none">
            @Localizer["Copyright"] &copy @DateTime.Now.Year Julián Augusto Ruiz
        </a>        
        @await Html.PartialAsync("_SelectLanguagePartial")
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha256-9SEPo+fwJFpMUet/KACSwO+Z/dKMReF9q4zFhU/fT9M=" crossorigin="anonymous"></script>    
    @RenderSection("Scripts", required: false)
</body>
</html>