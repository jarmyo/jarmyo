@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<a href="https://github.com/jarmyo/jarmyo" target="_blank" id="fork-corner" class="fork-corner fc-pos-tr fc-animate fc-theme-github fc-size-small"></a>
<div class="container my-5">
    <div class="row p-4 pb-0 pe-lg-0 pt-0 align-items-center rounded-3 border shadow-lg">
        <div class="col-lg-7 p-3 p-lg-5 pt-lg-3">
            <h1 class="display-4 fw-bold lh-1">JULIAN AUGUSTO RUÍZ MARTINEZ</h1>
            <p class="lead">@Localizer["Lead"]</p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-4 mb-lg-3">
                <a href="/Blog" class="btn btn-info btn-lg px-4 me-md-2 fw-bold">@Localizer["Blog"]</a>
                <a href="/Work" class="btn btn-primary btn-lg px-4 me-md-2 fw-bold">@Localizer["Work Playgroud"]</a>
                <a href="/Curriculum" class="btn btn-outline-success btn-lg px-4">CV</a>
            </div>
        </div>
        <div class="col-lg-4 offset-lg-1 p-0 overflow-hidden shadow-lg">
            <img src="/assets/index.png" alt="julian's picture">
        </div>
    </div>
</div>
<div class="container my-5">
    <div class="row g-5">
        <div class="col-md-6">
            <h2>@Localizer["Current activities"]</h2>
            <p>@Localizer["My_Activities"]</p>
            <ul>
                <li>@Localizer["My_Activities6"]</li>
                <li class="line-through">@Localizer["My_Activities5"]&nbsp;<span class="badge bg-danger">@Localizer["Finalized"]</span></li>
                <li class="line-through">@Localizer["My_Activities4"]&nbsp;<span class="badge bg-info">@Localizer["Finalized"]</span></li>
                <li>@Localizer["My_Activities3"]&nbsp;<span class="badge bg-info">@Localizer["Paused"]</span> </li>
                <li  class="line-through">@Localizer["My_Activities2"]&nbsp;<span class="badge bg-danger">@Localizer["Finalized"]</span></li>
                <li>@Localizer["My_Activities1"]</li>
            </ul>
        </div>
        <div class="col-md-6">
            <h2>@Localizer["Social Media"]</h2>
            <p>@Localizer["LeadSocial"]</p>
            <div class="row p-4">
                <div class="col fs-2"><a href="https://www.facebook.com/shinjistudio/"><i class="bi bi-facebook"></i></a></div>
                <div class="col fs-2"><a href="https://twitter.com/BShinji"><i class="bi bi-twitter"></i></a></div>
                <div class="col fs-2"><a href="https://www.instagram.com/juliangramer/"><i class="bi bi-instagram"></i></a></div>
                <div class="col fs-2"><a href="https://www.youtube.com/channel/UC3bChlMRaPeKnqhGD9QF1-w"><i class="bi bi-youtube"></i></a></div>
                <div class="col fs-2"><a href="https://www.linkedin.com/in/shinjistudio/"><i class="bi bi-linkedin"></i></a></div>
                <div class="col fs-2"><a href="https://www.youtube.com/channel/UC3bChlMRaPeKnqhGD9QF1-w"><i class="bi bi-twitch"></i></a></div>
            </div>
            <p>@Localizer["Other2"]</p>
            <ul>                
                <li><a href="https://es.duolingo.com/profile/jarmyo">@Localizer["Languages"]</a></li>
                <li><a href="https://es.bookmate.com/@Html.Raw("@jarmyo")">@Localizer["Books"]</a></li>
                <li><a href="https://letterboxd.com/jarmyo/">@Localizer["Movies"]</a></li>
            </ul>
        </div>
        <div class="col-md-12">
            <h2>@Localizer["Other"]</h2>
            <p>@Localizer["Other3"]</p>
            <ul>
                <li>@Localizer["Interest1"]</li>
                <li>@Localizer["Interest2"]</li>
                <li>@Localizer["Interest3"]</li>
            </ul>
            <audio controls src="/assets/mas.mp3">Your browser does not support the <code>audio</code> element. </audio>
        </div>
    </div>
</div>
@section Styles
{
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fork-corner/dist/fork-corner.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
}
@section HeadScripts
{
<script src="https://cdn.jsdelivr.net/npm/fork-corner/dist/fork-corner.min.js" defer></script>
}